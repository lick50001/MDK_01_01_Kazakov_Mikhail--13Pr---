<Window x:Class="Interface_Kazakov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface_Kazakov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#ff3f3f3f">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="10 10 10 10">
            <StackPanel x:Name="ParentUser" Height="756" Orientation="Vertical">
                
            </StackPanel>
        </ScrollViewer>
        <Grid x:Name="BlockMessage" Grid.Column="1" Margin="0" IsEnabled="False">
            <ScrollViewer Grid.Column="1" Margin="10 10 10 65">
                <StackPanel x:Name="parentMessage">

                </StackPanel>
            </ScrollViewer>
            <TextBox x:Name="Message" Padding="5" Margin="10 10 10 10" Grid.Column="1" Height="50"
                     VerticalAlignment="Bottom" Background="Black" Foreground="White" KeyUp="SendMessages">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
        </Grid>
    </Grid>
</Window>
