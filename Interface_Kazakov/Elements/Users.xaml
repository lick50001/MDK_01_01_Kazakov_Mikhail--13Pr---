<UserControl x:Class="Interface_Kazakov.Elements.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface_Kazakov.Elements"
             mc:Ignorable="d" 
             MouseUp="SelectUser">
    <Grid Height="50" Background="Black" Margin="5">
        <Border CornerRadius="15" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border.Background>
                <ImageBrush
                    ImageSource = "/Images/image-1.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center" />

            </Border.Background>
        </Border>
        <TextBlock x:Name="FIO" 
                   Margin="45,5,5,5" 
                   Padding="5" 
                   TextWrapping="Wrap" 
                   Text="Казаков Михаил" 
                   Foreground="White"/>
        <Grid.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="8" Opacity="0.5"/>
        </Grid.Effect>
    </Grid>
</UserControl>