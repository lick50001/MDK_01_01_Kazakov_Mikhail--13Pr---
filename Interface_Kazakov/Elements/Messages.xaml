<UserControl x:Class="Interface_Kazakov.Elements.Messages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface_Kazakov.Elements"
             mc:Ignorable="d" 
             MouseDoubleClick="DeleteMessage">

    <Grid Height="69" Background="Black" Margin="5">
        <Border CornerRadius="15" Width="30" Height="30" 
                Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border.Background>
                <ImageBrush 
                    ImageSource="C:\Users\Student-A502.PERMAVIAT\Desktop\Interface_Kazakov\Interface_Kazakov\Images\aooshchepkov.jpg"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center" />
            </Border.Background>
        </Border>

        <TextBlock x:Name="Message" 
                   Margin="45,5,5,25" 
                   Padding="5" 
                   TextWrapping="Wrap" 
                   Foreground="White" 
                   Text="Привет как дела?" />

        <TextBlock x:Name="Date" 
                   Margin="0,0,5,5" 
                   TextWrapping="Wrap" 
                   Text="19.10.2023" 
                   Foreground="White" 
                   HorizontalAlignment="Right" 
                   Width="70" 
                   VerticalAlignment="Bottom" />

        <Grid.Effect>
            <DropShadowEffect Color="Black" ShadowDepth="2" BlurRadius="8" Opacity="0.5"/>
        </Grid.Effect>
    </Grid>
</UserControl>
